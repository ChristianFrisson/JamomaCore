<h2>FunctionLib: Exponential</h2>

<% svg = MySVG.new(600, 150) %>

<% f = TTRuby.new("exponential") %>
<% for i in 0..600  %>
	<% x = i/600.0 %>
	<% y = f.calculate(x) %>
	<% svg.bar(i, 600, y) %>
	<!-- <p> <%= x %> : <%= y %> </p> -->
<% end %>

<% svg.write("temp-exp.svg") %>
<%= image_tag("temp-exp.svg") %>




